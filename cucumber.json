{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "dryRun": false,
        "paths": [
            "features/"
        ],
        "require": [
            "steps/*.ts",
            "support/hooks.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "html:test-results/cucumber-report.html",
            "json:test-results/cucumber-report.json",
            "rerun:@rerun.txt"
        ],
        "parallel": 2,
        "defaultTimeout": 30000
    }
}
